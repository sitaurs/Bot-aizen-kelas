# Gemini AI API Keys (single or multiple for rotation)
GEMINI_API_KEY=your_gemini_api_key_here
# Optional rotation keys (add as many as you want)
GEMINI_API_KEY_1=
GEMINI_API_KEY_2=
GEMINI_API_KEY_3=

# Timezone
TZ=Asia/Jakarta

# Storage Backend (local atau drive)
STORAGE_BACKEND=local

# Google Drive (opsional, jika menggunakan drive)
GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# WhatsApp Group IDs (SEMUA grup akan diperlakukan sama, dipisah koma)
# Hanya setting di sini saja, jangan di whitelist.json
GROUP_IDS=62812xxxxx@g.us,62813xxxxx@g.us,62814xxxxx@g.us

# DM yang diizinkan (bisa juga setting di whitelist.json â†’ dmAllowed)
ALLOWED_DMS=62812xxxxx@s.whatsapp.net,62813xxxxx@s.whatsapp.net

# Bot Configuration
BOT_NAME=Aizen
BOT_TRIGGERS=zen,aizen,zennn,zeen,zzzznnn

# Health Reminders (defaults)
HYDRATION_DAILY_GOAL_ML=2000
HYDRATION_GLASS_SIZE_ML=250

# Note Takers (JID yang akan di-DM untuk materi harian)
NOTE_TAKERS=6281@s.whatsapp.net
